server {
        listen 80;
        listen [::]:80;

        server_name gov.yuiseki.net;

        root /home/ubuntu/wget/www-data/;

        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;

        location / {
                try_files $uri $uri/ =404;
        }
        location ~ \.sh$ {
		root   /home/ubuntu/wget/www-data/;
		fastcgi_pass      unix:/var/run/fcgiwrap.socket;
		include           /etc/nginx/fastcgi_params;
		fastcgi_param     SCRIPT_FILENAME   $document_root$fastcgi_script_name;
                try_files $uri $uri/ =404;
        }
}
server {
        listen 80;
        listen [::]:80;

        server_name ~^(?<domain>.+)\.gov\.yuiseki\.net$;

        root /home/ubuntu/wget/www-data/$domain;

        location / {
                try_files $uri $uri/ =404;
        }
}
