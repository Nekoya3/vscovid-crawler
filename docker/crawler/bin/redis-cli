#!/usr/bin/env bash

declare -i argc=0
declare -a argv=()

while (( $# > 0 ))
do
  case $1 in
    -*)
      if [[ "$1" =~ 'h' ]]; then
        HOST=$2
        shift
        shift
      fi
      ;;
    *)
      ((++argc))
      argv=("${argv[@]}" "$1")
      shift
      ;;
  esac
done

if [ "$HOST" == "" ]; then
  HOST=redis # docker container
fi

/usr/bin/redis-cli -h $HOST $argv
